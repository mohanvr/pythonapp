<CusButton@Button>:
	font_size: 32

<calcgridlay>:
	id: calculator
	display: entry
	rows: 5
	padding: 10
	spacing: 10
	
	BoxLayout:
		TextInput:
			id: entry
			font_size: 30
			multiline: False
			
	BoxLayout:
		spacing: 10
		CusButton:
			text: "7"		
			on_press: entry.text += self.text
		CusButton:
			text: "8"		
			on_press: entry.text += self.text
		CusButton:
			text: "9"		
			on_press: entry.text += self.text
		CusButton:
			text: "+"		
			on_press: entry.text += self.text	
			
	BoxLayout:
		spacing: 10
		CusButton:
			text: "6"		
			on_press: entry.text += self.text
		CusButton:
			text: "5"		
			on_press: entry.text += self.text
		CusButton:
			text: "4"		
			on_press: entry.text += self.text
		CusButton:
			text: "-"		
			on_press: entry.text += self.text	
			
	BoxLayout:
		spacing: 10
		CusButton:
			text: "3"		
			on_press: entry.text += self.text
		CusButton:
			text: "2"		
			on_press: entry.text += self.text
		CusButton:
			text: "1"		
			on_press: entry.text += self.text
		CusButton:
			text: "*"		
			on_press: entry.text += self.text	
					
	BoxLayout:
		spacing: 10
		CusButton:
			text: "AC"		
			on_press: entry.text = ""
		CusButton:
			text: "0"		
			on_press: entry.text += self.text
		CusButton:
			text: "="		
			on_press: calculator.calculate(entry.text)
		CusButton:
			text: "/"		
			on_press: entry.text += self.text		
			
			